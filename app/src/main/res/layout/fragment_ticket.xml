<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Ticket"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/img_ticket" />

    <ImageView
        android:id="@+id/img_ticket"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/ticket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_buy_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:stateListAnimator="@null"
        android:text="Buy Ticket"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_ticket" />


</androidx.constraintlayout.widget.ConstraintLayout>